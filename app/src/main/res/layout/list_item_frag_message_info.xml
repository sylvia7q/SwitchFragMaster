<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/frag_message_ll_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/lb_layout_selector">
        <ImageView
            android:id="@+id/frag_message_iv_type"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/frag_message_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/lb_black"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/frag_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:00"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/lb_gray"
                    android:textSize="12sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/frag_message_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxEms="10"
                    android:ellipsize="end"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/lb_gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/frag_message_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/red_dot_bg"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/whites"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>