<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--基本信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/frag_status_tv_title"
                    android:text="@string/frag_product_status_base_info"/>
            </LinearLayout>
            <!--制令单-->
            <LinearLayout
                android:background="@color/lb_whites"
                style="@style/frag_status_out_layout">

                <ImageView
                    style="@style/frag_status_image"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/wo" />
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/product_tv_wo_title"
                        style="@style/frag_status_tv_top"
                        android:text="@string/frag_product_status_wo"/>
                    <TextView
                        android:id="@+id/product_tv_wo"
                        style="@style/frag_status_tv_bottom"></TextView>
                </LinearLayout>
            </LinearLayout>
            <!--产品号-->
            <LinearLayout
                style="@style/frag_status_out_layout"
                android:background="@color/lb_whites">
                <!--产品号-->
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/frag_status_image"
                        android:background="@mipmap/product_no" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_tv_part_no_title"
                            style="@style/frag_status_tv_top"
                            android:text="@string/frag_product_status_product_no"/>

                        <TextView
                            android:id="@+id/product_tv_part_no"
                            style="@style/frag_status_tv_bottom"/>
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/style_column_line_view" />
                <!--产品描述-->
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/product_no" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/product_tv_part_desc_title"
                            style="@style/frag_status_tv_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/frag_product_status_product_desc" />

                        <TextView
                            android:id="@+id/product_tv_part_desc"
                            style="@style/frag_status_tv_bottom"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/lb_whites"
                style="@style/frag_status_out_layout">
                <!--基本信息-->
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/frag_status_image"
                        android:background="@mipmap/plan" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_tv_plan_num_title"
                            style="@style/frag_status_tv_top"
                            android:text="@string/frag_product_status_plan_num" />
                        <TextView
                            android:id="@+id/product_tv_plan_num"
                            style="@style/frag_status_tv_bottom"/>
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/style_column_line_view"/>
                <!--基本信息-->
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/panel" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_tv_panel_num_title"
                            style="@style/frag_status_tv_top"
                            android:text="@string/frag_product_status_panel_num" />
                        <TextView
                            android:id="@+id/product_tv_panel_num"
                            style="@style/frag_status_tv_bottom"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--基本信息-->
            <LinearLayout
                android:background="@color/lb_whites"
                style="@style/frag_status_out_layout">
                <!--基本信息-->
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/frag_status_image"
                        android:background="@mipmap/date" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_tv_plan_begin_date_title"
                            style="@style/frag_status_tv_top"
                            android:text="@string/frag_product_status_plan_begin"/>

                        <TextView
                            android:id="@+id/product_tv_plan_begin_date"
                            style="@style/frag_status_tv_bottom"/>
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/style_column_line_view"/>
                <!--基本信息-->
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/date" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_tv_plan_end_date_title"
                            style="@style/frag_status_tv_top"
                            android:text="@string/frag_product_status_plan_end"/>

                        <TextView
                            android:id="@+id/product_tv_plan_end_date"
                            style="@style/frag_status_tv_bottom"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--基本信息-->
            <LinearLayout
                android:background="@color/lb_whites"
                style="@style/frag_status_out_layout">
                <!--基本信息-->
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/frag_status_image"
                        android:background="@mipmap/custom" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_tv_custom_title"
                            style="@style/frag_status_tv_top"
                            android:text="@string/frag_product_status_custom_info"/>

                        <TextView
                            android:id="@+id/product_tv_custom"
                            style="@style/frag_status_tv_bottom" />
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/style_column_line_view"/>
                <!--基本信息-->
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/frag_status_image"
                        android:background="@mipmap/wo" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_tv_next_wo_title"
                            style="@style/frag_status_tv_top"
                            android:text="@string/frag_product_status_next_wo"/>

                        <TextView
                            android:id="@+id/product_tv_next_wo"
                            style="@style/frag_status_tv_bottom"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--生产进度-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/frag_status_tv_title"
                    android:text="@string/frag_product_status_product_progress"/>
            </LinearLayout>
            <!--生产进度-->
            <LinearLayout
                android:background="@color/lb_whites"
                style="@style/frag_status_out_layout">
                <!--生产进度-->
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/progress" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_tv_schedule_title"
                            style="@style/frag_status_tv_top"
                            android:text="@string/frag_product_status_product_progress" />

                        <TextView
                            android:id="@+id/product_tv_schedule"
                            style="@style/frag_status_tv_bottom" />
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/style_column_line_view"/>
                <!--正反面-->
                <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/board" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_tv_side_title"
                            style="@style/frag_status_tv_top"
                            android:text="@string/frag_product_status_side" />

                        <TextView
                            android:id="@+id/product_tv_side"
                            style="@style/frag_status_tv_bottom"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--生产指标-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/frag_status_tv_title"
                    android:text="@string/frag_product_status_product_index"/>
            </LinearLayout>
            <!--生产指标-->
            <LinearLayout
                android:background="@color/lb_whites"
                style="@style/frag_status_out_layout">
                <!--生产指标-->
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/frag_status_image"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/progress" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_tv_co_title"
                            style="@style/frag_status_tv_top"
                            android:text="@string/frag_product_status_product_co"/>

                        <TextView
                            android:id="@+id/product_tv_co"
                            style="@style/frag_status_tv_bottom"/>
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/style_column_line_view"/>
                <!---->
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/progress" />
                    <LinearLayout
                        style="@style/frag_status_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_tv_oe_title"
                            style="@style/frag_status_tv_top"
                            android:text="@string/frag_product_status_product_oe"/>
                        <TextView
                            android:id="@+id/product_tv_oe"
                            style="@style/frag_status_tv_bottom"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--FTQ-->
            <LinearLayout
                android:background="@color/lb_whites"
                style="@style/frag_status_out_layout">
                <ImageView
                    style="@style/frag_status_image"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/progress" />
                <LinearLayout
                    style="@style/frag_status_layout"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/product_tv_ftq_title"
                        style="@style/frag_status_tv_top"
                        android:text="@string/frag_product_status_product_ftq"/>
                    <TextView
                        android:id="@+id/product_tv_ftq"
                        style="@style/frag_status_tv_bottom"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>