<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.kanban.switchfragmaster.view.TitleBarView
        android:id="@+id/activity_socket_ip_setting_title_bar"
        android:layout_height="40dp"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_below="@+id/activity_socket_ip_setting_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="left|center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/socket_ip"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:background="@drawable/lb_ed_selector">
            <EditText
                android:id="@+id/activity_socket_ip_setting_ed_ip_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@null"
                android:maxLength="3"
                android:textSize="16sp"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."/>
            <EditText
                android:id="@+id/activity_socket_ip_setting_ed_ip_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@null"
                android:maxLength="3"
                android:textSize="16sp"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."/>
            <EditText
                android:id="@+id/activity_socket_ip_setting_ed_ip_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@null"
                android:maxLength="3"
                android:textSize="16sp"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."/>
            <EditText
                android:id="@+id/activity_socket_ip_setting_ed_ip_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@null"
                android:maxLength="3"
                android:textSize="16sp"
                android:inputType="number"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/socket_port"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/activity_socket_ip_setting_ed_port"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:textSize="16sp"
            android:background="@drawable/lb_ed_selector"
            android:inputType="number"/>

        <Button
            android:id="@+id/activity_socket_ip_setting_btn_save"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:text="@string/webservice_sava"
            android:textSize="18sp"
            android:background="@drawable/selector_btn"
            android:textColor="@android:color/white"/>
    </LinearLayout>


</RelativeLayout>
